<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/led_ic"
        android:textColor="@color/text_color"
        android:textSize="32sp" />

    <ToggleButton
        android:id="@+id/toggleButton_on_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="50dp"
        android:onClick="onOffLed"
        android:background="@drawable/tb_selector"
        android:textOff="@string/nulo"
        android:textOn="@string/nulo" 
        android:checked="false"/>

    <ImageView
        android:id="@+id/imageViewStatusLed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/toggleButton_on_off"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bulb_off" />

</RelativeLayout>